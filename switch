#include<iostream>
using namespace std;
int main(){
	char ch;
    cout << "---------------Menu Score Student Grade---------------\n";
	cout << "1 80-100\n";
	cout << "2 75-79\n";
	cout << "3 70-74\n";
	cout << "4 65-69\n";
    cout << "5 60-64\n";
	cout << "6 55-50\n";
	cout << "7 50-54\n";
	cout << "8 0-49\n" ;
	cout << "9 Exit\n" ;
	cout << "please select choice : ";
	cin >> ch;
		switch(ch){
		case '1' : cout << "\nYou score is range<80-100>\n" << "The student grade is:4.00\n";
			break;
		case '2' : cout << "\nYou score is range<75-79>\n" << "The student grade is:3.50\n";
			break;
		case '3' : cout << "\nYou score is range<70-74>\n" << "The student grade is:3.00\n";
			break;
		case '4' : cout << "\nYou score is range<65-69>\n" << "The student grade is:2.50\n";
			break;
		case '5' : cout << "\nYou score is range<60-64>\n" << "The student grade is:2.00\n";
			break;
		case '6' : cout << "\nYou score is range<55-59>\n" << "The student grade is:1.50\n";
			break;
		case '7' : cout << "\nYou score is range<50-754>\n" << "The student grade is:1.00\n";
			break;
		case '8' : cout << "\nYou score is range<0-49>\n" << "The student grade is:0.00\n";
			break;
		case '9' : cout << "================Exit================\n" ;
			break;
		default : cout << "Plaese Select only 1-9";
			return(0);
			

	}

	
}
